<h1 class="mt-4 mb-4">All Pets 🐻</h1>



<%= link_to "Add a new Pet", new_pet_path, class: "btn btn-success mb-5" %>

<div class="pets-grid">
  <% @pets.each do |pet| %>
  <div class="pet-card hvr-grow ">
    <div>
      <h4><%= pet.name  %></h4>
      <%= image_tag pet.icon_creator %>
    </div>
    <div>
      <h4 class="mt-4">Available:</h4>
      <%= pet.available ? "✓" : "✕" %>
    </div>

    <%= link_to "See more", pet_path(pet.id), class: "btn btn-primary mt-4" %>
  </div>
  <% end %>
</div>
